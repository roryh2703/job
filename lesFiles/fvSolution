FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
        tolerance       0;
        relTol          0.01;
        smoother        GaussSeidel;
        nPreSweeps      0;
        nPostSweeps     2;
        cacheAgglomeration true;
        nCellsInCoarsestLevel 10;
        agglomerator    faceAreaPair;
        mergeLevels     1;
    }

    pFinal
    {
        $p;
        smoother        DICGaussSeidel;
        tolerance       1e-08;
        relTol          0;
    }

    "(U|k|nuTilda)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-08;
        relTol          0.1;
    }

    "(U|k|nuTilda)Final"
    {
        $U;
        tolerance       1e-06;
        relTol          0;
    }
}

PIMPLE
{
    momentumPredictor yes;
    nCorrectors       3;    // Inner Loops ( Pressure Correction )
    nOuterCorrectors  10;    // Outer Loops ( Pressure - Momentum Correction )
    nNonOrthogonalCorrectors 0;      // set to 0 because hex mesh used
    turbOnFinalIterOnly  false;

    residualControl
    {
        p
        {
            relTol 0;   
            // If this initial tolerance is reached leave outerCorrector
            tolerance 1e-8;
        }

        U
	{
            relTol    0;
            // If this initial tolerance is reached leave outerCorrector
            tolerance 1e-6;
        }
    }
}


relaxationFactors          
{
    fields
    {
        p        0.6;
        pFinal   1;    // Last outer loop
    }

    equations
    {
        U        0.8;
        UFinal   1;    // Last outer loop
    }
}


