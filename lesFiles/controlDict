FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
} 
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


libs (
        "libforces.so"
	"/nobackup/scrh/libraries/libfixedMeanValue.so"
 );  		 


application     pimpleFoam;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         70;

deltaT          1e-6;

writeControl    adjustableRunTime;

writeInterval   0.1;

purgeWrite      1;

writeFormat     ascii;

writePrecision  6;

writeCompression on;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

adjustTimeStep  yes; 

maxCo           1;

functions
{

    #includeFunc    surfaces
    #includeFunc    correlation_probes_3D
    #includeFunc    correlation_probes_10D
    #includeFunc    probes_spectra_3D
    #includeFunc    probes_spectra_5D
    #includeFunc    probes_spectra_7D
    #includeFunc    probes_spectra_10D
    #includeFunc    probesU
    #includeFunc    probesp  
    #includeFunc    probesX1TransverseU
    #includeFunc    probesX2TransverseU
    #includeFunc    probesX3TransverseU
    #includeFunc    probes_spectra_us5D
    #includeFunc    probes_spectra_us10D


Q1
{
        type            Q;
        libs            ("libfieldFunctionObjects.so");
        writeControl    runTime;
        writeInterval   0.1;   
        purgeWrite      1;     
}


fieldAverage1
{
        type            fieldAverage;
        functionObjectLibs ( "libfieldFunctionObjects.so" );
        enabled         true;
        writeControl    runTime;
        writeInterval   0.1;

        fields
        (
            U
            {
                mean        on;
                prime2Mean  on;
                base        time;
            }

            p
            {
                mean        on;
                prime2Mean  on;
                base        time;
            }
        );
}


cylinder
{
        patches           	        (CYLINDERWALL);
        CofR             	        (0 0 0.0376992);
        writeControl 		        timeStep;
        writeInterval 		        1;             //outputs every 5 t steps
        type 			        forces;
        pName 				p;
        UName 				U;
        rho	 			rhoInf;
        rhoInf 				999.4;
        log 				true;
}



}


