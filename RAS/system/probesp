Description
    Writes out values of fields from cells nearest to specified locations.

\*---------------------------------------------------------------------------*/

type            probes;
libs            ("libsampling.so");

writeControl    timeStep;
writeInterval   1;

fields (p);


probeLocations

(

    (-0.312 0.12 0.0376992)           // (-13D 5D 0D)
    (0.012 0 0.0376992)

);



