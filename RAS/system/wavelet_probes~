Description
    Writes out values of fields from cells nearest to specified locations.

\*---------------------------------------------------------------------------*/

type            probes;
libs            ("libsampling.so");

writeControl    timeStep;
writeInterval   1;

fields (U);

probeLocations

(

            (-0.3600  0  0.037692)    // -15D
            (-0.3360  0  0.037692)    // -14D
            (-0.3120  0  0.037692)    // -13D
            (-0.2880  0  0.037692)    // -12D
            (-0.2640  0  0.037692)    // -11D
            (-0.2400  0  0.037692)    // -10D
            (-0.2160  0  0.037692)    // -9D
            (-0.1920  0  0.037692)    // -8D
            (-0.1680  0  0.037692)    // -7D
            (-0.1440  0  0.037692)    // -6D
            (-0.1200  0  0.037692)    // -5D
            (-0.0960  0  0.037692)    // -4D
            (-0.0720  0  0.037692)    // -3D
            (-0.0480  0  0.037692)    // -2D
            (-0.0240  0  0.037692)    // -1D

);



